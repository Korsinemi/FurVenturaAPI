{
    "version": 2,
    "functions": {
        "api/*.js": { "maxDuration": 40 }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.js",
            "methods": [ "GET", "PUT", "PATCH", "POST", "DELETE", "OPTIONS" ],
            "headers": {
                "Access-Control-Allow-Origin": "*"
            }
        }
    ]
}
